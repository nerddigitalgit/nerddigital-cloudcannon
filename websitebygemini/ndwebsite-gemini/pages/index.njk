{% include "nav.njk" %}

<main>
  {# Hero Section #}
  <section class="relative pt-28 pb-8 md:pt-32 md:pb-10 overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
      <div class="absolute inset-0 bg-nerd-light"></div>
    </div>

    <div class="container mx-auto px-6 text-center">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-[2.28rem] md:text-[3.42rem] text-nerd-dark mb-6 leading-[1.15] font-sans font-semibold">
          <span data-editable="text" data-prop="hero_title_line1">{{ hero_title_line1 }}</span><br>
          <span class="font-serif italic font-semibold" data-editable="text" data-prop="hero_title_line2">{{ hero_title_line2 }}</span>
        </h1>

        <p class="max-w-2xl mx-auto text-base md:text-lg text-nerd-muted mb-8 leading-relaxed font-sans" data-editable="text" data-prop="hero_subtitle">
          {{ hero_subtitle }}
        </p>

        <button class="btn-primary px-8 py-4 inline-flex items-center justify-center" style="font-size: 0.6rem;" data-editable="text" data-prop="hero_cta_text" onclick="document.getElementById('lead-magnet').scrollIntoView({behavior: 'smooth'})">
          {{ hero_cta_text }}
        </button>
      </div>
    </div>
  </section>

  {# Expert Marquee - Large Cards #}
  <div class="w-full py-8 bg-nerd-light overflow-hidden">
    <div class="container mx-auto px-6 mb-8 text-center">
      <p class="font-mono uppercase tracking-widest text-nerd-muted" style="font-size: 0.6rem;" data-editable="text" data-prop="experts_title">{{ experts_title }}</p>
    </div>

    <div class="relative w-full overflow-hidden">
      {# Gradient fades on edges #}
      <div class="absolute top-0 left-0 w-[115px] h-full bg-gradient-to-r from-nerd-light to-transparent z-10 hidden md:block"></div>
      <div class="absolute top-0 right-0 w-[115px] h-full bg-gradient-to-l from-nerd-light to-transparent z-10 hidden md:block"></div>

      {# Scrolling marquee #}
      <div class="flex gap-8 animate-marquee-seamless w-max hover:[animation-play-state:paused]">
        {# First set of experts #}
        {% for expert in experts %}
        <div class="expert-card relative group w-[213px] h-[274px] flex-shrink-0 overflow-hidden cursor-pointer transition-all duration-300">
          <img src="{{ expert.image }}" alt="{{ expert.name }}" class="w-full h-full object-cover transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-90"></div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white">
            <p class="text-xs font-mono uppercase tracking-wider text-nerd-green mb-1">{{ expert.role }}</p>
            <h3 class="text-xl font-sans font-semibold">{{ expert.name }}</h3>
          </div>
        </div>
        {% endfor %}
        {# Duplicate for seamless loop #}
        {% for expert in experts %}
        <div class="expert-card relative group w-[213px] h-[274px] flex-shrink-0 overflow-hidden cursor-pointer transition-all duration-300">
          <img src="{{ expert.image }}" alt="{{ expert.name }}" class="w-full h-full object-cover transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-90"></div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white">
            <p class="text-xs font-mono uppercase tracking-wider text-nerd-green mb-1">{{ expert.role }}</p>
            <h3 class="text-xl font-sans font-semibold">{{ expert.name }}</h3>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>

  {# Problem Statement #}
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-6">
      <p class="max-w-3xl mx-auto text-center text-lg md:text-xl lg:text-2xl leading-relaxed text-nerd-dark font-sans" data-editable="block" data-prop="problem_statement">
        {{ problem_statement | safe }}
      </p>
    </div>
  </section>

  {# Logo Marquee #}
  <div class="w-full py-8 bg-white overflow-hidden">
    <div class="container mx-auto px-6 mb-6 text-center">
      <p class="font-mono uppercase tracking-widest text-nerd-muted" style="font-size: 0.6rem;" data-editable="text" data-prop="logos_title">{{ logos_title }}</p>
    </div>

    <div class="container mx-auto px-6 flex justify-center">
      <div class="relative w-full max-w-5xl overflow-hidden">
        <div class="absolute top-0 left-0 w-[86px] h-full bg-gradient-to-r from-white to-transparent z-10"></div>
        <div class="absolute top-0 right-0 w-[86px] h-full bg-gradient-to-l from-white to-transparent z-10"></div>

        <div class="flex gap-16 animate-logo-scroll-reverse">
          {# Logos repeated 4x for seamless scroll #}
          {% for i in range(0, 4) %}
          {% for logo in trust_logos %}
          <div class="flex-shrink-0 flex items-center justify-center h-24 px-4">
            <img src="{{ logo.src }}" alt="{{ logo.alt }}" class="h-16 md:h-20 w-auto object-contain logo-dark {{ logo.class }}">
          </div>
          {% endfor %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  {# Testimonials - Image Background Cards #}
  <section class="py-12 md:py-16 relative bg-nerd-dark">
    <div class="absolute inset-0 opacity-5" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 0h40v40H0V0zm1 1h38v38H1V1z' fill='%23FFFFFF' fill-opacity='1' fill-rule='evenodd'/%3E%3C/svg%3E&quot;);"></div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-16">
        <p class="text-sm font-mono uppercase tracking-widest text-white/60 mb-4" data-editable="text" data-prop="testimonials_eyebrow">{{ testimonials_eyebrow }}</p>
        <h2 class="text-3xl md:text-5xl text-white mb-4 font-sans font-semibold">
          <span data-editable="text" data-prop="testimonials_title">{{ testimonials_title }}</span> <span class="font-serif italic font-semibold" data-editable="text" data-prop="testimonials_title_italic">{{ testimonials_title_italic }}</span>
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {% for testimonial in testimonials %}
        <div class="relative h-[320px] md:h-[320px] overflow-hidden group cursor-pointer rounded-2xl">
          <img src="{{ testimonial.image }}" alt="{{ testimonial.name }}" class="absolute inset-0 w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/50 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col p-6 md:p-8 max-w-[70%]">
            <div class="mb-4">
              <span class="inline-block px-4 py-1.5 bg-amber-50 rounded-full text-xs font-mono uppercase tracking-widest text-neutral-800">Success Story</span>
            </div>
            <h3 class="text-white text-lg md:text-xl font-semibold leading-snug font-sans">"{{ testimonial.quote }}"</h3>
            <div class="mt-auto pt-4">
              <p class="text-white/80 text-sm font-sans"><span class="font-semibold text-white">{{ testimonial.name }}</span> · {{ testimonial.role }}</p>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

  {# Lead Magnet Section - Side by Side #}
  <section id="lead-magnet" class="py-16 md:py-20 bg-nerd-light relative overflow-hidden">
    <div class="container mx-auto px-8 md:px-16 lg:px-24 relative z-10">
      <div class="max-w-5xl mx-auto flex flex-col md:flex-row items-center gap-12">
        <div class="flex-1 text-center md:text-left">
          <p class="text-xs font-mono text-nerd-muted uppercase tracking-widest mb-4" data-editable="text" data-prop="leadmagnet_eyebrow">{{ leadmagnet_eyebrow }}</p>
          <h2 class="text-3xl md:text-4xl text-nerd-dark leading-tight mb-4 font-sans font-semibold">
            <span data-editable="text" data-prop="leadmagnet_title">{{ leadmagnet_title }}</span> <span class="font-serif italic font-semibold" data-editable="text" data-prop="leadmagnet_title_italic">{{ leadmagnet_title_italic }}</span>
          </h2>
          <p class="text-lg text-nerd-muted mb-8" data-editable="text" data-prop="leadmagnet_subtitle">{{ leadmagnet_subtitle }}</p>

          <button class="btn-primary px-8 py-4 inline-flex items-center justify-center" style="font-size: 0.6rem;" data-editable="text" data-prop="leadmagnet_cta">
            {{ leadmagnet_cta }}
          </button>
          <p class="text-sm text-nerd-muted mt-4" data-editable="text" data-prop="leadmagnet_note">{{ leadmagnet_note }}</p>
        </div>

        <div class="flex-1 flex justify-center items-center">
          <div class="relative w-[280px] md:w-[320px] rotate-2 hover:rotate-0 transition-transform duration-500 cursor-pointer group">
            <img src="{{ leadmagnet_image }}" alt="The Conversion Code" class="w-full h-auto shadow-xl" data-editable="image" data-prop-src="leadmagnet_image">
            <div class="absolute inset-0 bg-nerd-pink/20 -z-10 translate-x-3 translate-y-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

{% include "footer.njk" %}
