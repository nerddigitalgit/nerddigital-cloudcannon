    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      <div class="text-center md:text-left">
        <img src="{{ site.logo.footer }}" alt="{{ site.title }}" class="h-4 mx-auto md:mx-0 mb-4 opacity-80">
        <p class="text-sm text-gray-500 font-sans">
          &copy; Copyright {{ site.copyright_year }} {{ site.title }}
        </p>
      </div>
      <div class="flex gap-6">
        <a href="/privacy/" class="text-sm text-gray-500 hover:text-white transition-colors font-sans">Privacy</a>
        <a href="/terms/" class="text-sm text-gray-500 hover:text-white transition-colors font-sans">Terms</a>
