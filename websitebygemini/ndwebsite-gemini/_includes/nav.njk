{# Navigation Component #}
<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-nerd-border">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/">
        <img src="{{ site.logo.header }}" alt="{{ site.title }}" class="h-5">
      </a>
      <div class="flex items-center gap-6">
        {% for item in navigation.items %}
        <a href="{{ item.url }}" class="text-sm font-medium text-nerd-muted hover:text-nerd-dark transition-colors font-sans hidden md:block">
          {{ item.label }}
        </a>
        {% endfor %}
        <a href="{{ navigation.cta.url }}" class="btn-primary px-5 py-2.5 text-xs">
          {{ navigation.cta.label }}
        </a>
      </div>
    </div>
  </div>
</nav>
