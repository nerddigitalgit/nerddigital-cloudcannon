{
  "source": "websitebygemini/ndwebsite-gemini",
  "output": "_site",
  "timezone": "America/Toronto",
  "base_url": "/",
  "_generator": {
    "name": "eleventy",
    "version": "2.0",
    "metadata": {
      "markdown": "markdown-it",
      "markdown_options": {
        "html": true
      }
    }
  },
  "paths": {
    "data": "_data",
    "layouts": "_layouts",
    "includes": "_includes",
    "static": "assets",
    "uploads": "assets/uploads"
  },
  "_editables": {
    "text": {
      "italic": true,
      "bold": true,
      "link": true
    },
    "block": {
      "format": "p h2 h3",
      "italic": true,
      "bold": true,
      "link": true,
      "bulletedlist": true,
      "numberedlist": true
    }
  },
  "collections_config": {
    "pages": {
      "path": "pages",
      "url": "/[slug]/",
      "output": true,
      "icon": "wysiwyg",
      "name": "Pages",
      "description": "Main website pages",
      "_enabled_editors": ["visual", "data", "source"]
    },
    "landing_pages": {
      "path": "landing",
      "url": "/landing/[slug]/",
      "output": true,
      "icon": "rocket_launch",
      "name": "Landing Pages",
      "description": "Marketing and conversion landing pages",
      "_enabled_editors": ["visual", "data", "source"],
      "add_options": [
        {
          "name": "Lead Magnet Landing Page",
          "base_path": "landing/_template-lead-magnet.njk"
        }
      ]
    },
    "data": {
      "path": "_data",
      "output": false,
      "icon": "settings",
      "name": "Site Data",
      "description": "Global site configuration and content"
    }
  },
  "data_config": {
    "site": {
      "path": "_data/site.json"
    },
    "navigation": {
      "path": "_data/navigation.json"
    }
  },
  "_inputs": {
    "title": {
      "type": "text",
      "label": "Page Title"
    },
    "description": {
      "type": "textarea",
      "label": "Meta Description"
    },
    "hero_eyebrow": {
      "type": "text",
      "label": "Eyebrow Text"
    },
    "hero_title_line1": {
      "type": "text",
      "label": "Title Line 1"
    },
    "hero_title_line2": {
      "type": "text",
      "label": "Title Line 2"
    },
    "hero_subtitle": {
      "type": "textarea",
      "label": "Subtitle"
    },
    "hero_image": {
      "type": "image",
      "label": "Hero Image"
    },
    "hero_cta_text": {
      "type": "text",
      "label": "Button Text"
    },
    "show_trusted_by": {
      "type": "switch",
      "label": "Show Trusted By Section"
    },
    "form_source": {
      "type": "text",
      "label": "Form Source (for tracking)",
      "comment": "Identifier sent to GoHighLevel webhook"
    },
    "last_updated": {
      "type": "date",
      "label": "Last Updated Date"
    },
    "experts": {
      "type": "array",
      "label": "Featured Experts"
    },
    "testimonials": {
      "type": "array",
      "label": "Testimonials"
    },
    "faq_items": {
      "type": "array",
      "label": "FAQ Items"
    },
    "course_days": {
      "type": "array",
      "label": "Course Content"
    },
    "stats": {
      "type": "array",
      "label": "Statistics"
    },
    "pain_points": {
      "type": "array",
      "label": "Pain Points"
    },
    "quick_benefits": {
      "type": "array",
      "label": "Quick Benefits"
    }
  }
}
